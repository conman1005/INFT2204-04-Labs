include ../partials/navbar
include ../partials/title
    table.table.table-striped
        tr
            th Zoo
            th Scientific Name
            th Common Name
            th Given Name
            th Gender
            th Date of Birth 
            th Is Transportable
            td Edit
        each animal in animals 
            tr
                td=animal.Zoo   
                td=animal.ScientificName
                td=animal.CommonName     
                td=animal.GivenName
                td=animal.Gender  
                td=animal.DOB + "<br/>(Age: " + animal.Age + ")"
                td=animal.isTransportable 
                td
                    form(action="./edit" method="post") 
                        input(type="hidden" id="_id" name="_id" value=animal._id)
                        input(type="submit" value="Edit")